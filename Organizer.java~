{
    MenuBar mb;
    GridPane gp;
    List<List<String>> matchups;
    Label[][] lb;
    List<String> top64;
    List<String> top32;
    List<String> top16;
    List<String> top8;
    List<String> top4;
    List<String> top2;
    String winner;
    
    //Initialize Variables
    public void init()
    {
        
        mb = new MenuBar(); //MenuBar
        gp = new GridPane(); //GridPane
        lb = new Label[33][12];
        top64 = new ArrayList<String>(64);
        top32 = new ArrayList<String>(32);
        top16 = new ArrayList<String>(16);
        top8 = new ArrayList<String>(8);
        top4 = new ArrayList<String>(4);
        top2 = new ArrayList<String>(2);
        winner = "noone";
        matchups = new ArrayList<List<String>>(); //For manual Bracket Input
    }
